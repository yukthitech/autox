<test-data-list xmlns:r="http://xmlbeanparser.yukthitech.com/reserved">
	<r:register-bean id="testPojo">
		<value>json:
			{
				"name": "Some Name",
				"prop1": "val1",
				"lst": [1, 2, 3],
				"sub": {
					"key1": "val1",
					"key2": "val2"
				}
			}
		</value>
	</r:register-bean>
	
	<test-case-data name="case1">
		<dynamic-value>
			<r:clone beanId="testPojo" property="payload">
				<set property="prop1" value="newValue"/>
				<set property="prop: sub.key2" value="value2"/>
			</r:clone>
			
			<expectedResult>
				{
					"name": "Some Name",
					"prop1": "newValue",
					"lst": [1, 2, 3],
					"sub": {
						"key1": "val1",
						"key2": "value2"
					}
				}
			</expectedResult>
		</dynamic-value>
	</test-case-data>

	<test-case-data name="case2">
		<dynamic-value>
			<r:clone beanId="testPojo" property="payload">
				<set property="prop: prop1" value="newValue2"/>
				<remove property="xpath: /sub/key1"/>		
			</r:clone>
			
			<expectedResult>
				{
					"name": "Some Name",
					"prop1": "newValue2",
					"lst": [1, 2, 3],
					"sub": {
						"key2": "val2"
					}
				}
			</expectedResult>
		</dynamic-value>
	</test-case-data>
</test-data-list>
